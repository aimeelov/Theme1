<div class="container py-5 my-5">
    <div class="login-form">
        {% form 'customer_login' %}
            <h1 class="h3">Customer Login</h1>
            <label for="customer_email">Email Address</label>
            <input type="email" name="customer[email]" class="form-control rounded-0" />
            <label for="password">Password</label>
            <input type="password" name="customer[password]" class="form-control rounded-0"/>

            <input type="button" name="Sign in" class="btn btn-primary btn-lg w-100 rounded-0"/>
        {% endform %}
    </div>
</div>

